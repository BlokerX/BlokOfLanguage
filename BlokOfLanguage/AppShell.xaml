<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="BlokOfLanguage.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BlokOfLanguage"
    xmlns:v="clr-namespace:BlokOfLanguage.Pages.Views">
    <TabBar>
        <Tab Title="Home"
             Icon="cat.png">
            <ShellContent ContentTemplate="{DataTemplate v:MainPage}"/>
        </Tab>
        <Tab Title="WL"
             Icon="cat.png">
            <ShellContent ContentTemplate="{DataTemplate v:WordsListPage}"/>
        </Tab>
        <Tab Title="ADD"
             Icon="cat.png">
            <ShellContent ContentTemplate="{DataTemplate v:WordCreationForm}"/>
        </Tab>
    </TabBar>
</Shell>
