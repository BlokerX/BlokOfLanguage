<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlokOfLanguage.Pages.Views.WordCreationForm"
             Title="WordCreationForm">
    <VerticalStackLayout>
        
        <Label 
            Text="Translate word: "
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Text="{Binding TranslateWord}"/>
        
        <Label 
            Text="Base language word: "
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Text="{Binding BaseLanguageWord}"/>
        
        <Label 
            Text="Part of speech: "
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <SelectableItemsView SelectedItem="{Binding PartOfSpeech, Mode=TwoWay}"/>
        
        <Label 
            Text="Difficult level: "
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Text="{Binding DifficultLevel}"/>
        
        <Label 
            Text="Translate word: "
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Text="{Binding TranslateWord}"/>

        <Button Text="ADD WORD"
                Clicked="AddButton_Clicked"/>

    </VerticalStackLayout>
</ContentPage>