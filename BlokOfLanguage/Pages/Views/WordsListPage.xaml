<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BlokOfLanguage.Pages.ViewModels"
             x:Class="BlokOfLanguage.Pages.Views.WordsListPage"
             Loaded="WordsListPage_Loaded">
    <ContentPage.BindingContext>
        <vm:WordListViewModel/>
    </ContentPage.BindingContext>

    <VerticalStackLayout
            Spacing="25"
            Padding="30,20">

        <SearchBar Placeholder="Search word"
                   Text="{Binding SearchBarText, Mode=TwoWay}"
                   TextChanged="SearchEntry_TextChanged"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"/>

        <HorizontalStackLayout IsVisible="{Binding IsSearch, Mode=TwoWay}">
            <Label Text='Wyniki wyszukiwania "'/>
            <Label Text="{Binding SearchBarText}"
                   TextColor="{StaticResource TextColor2}"/>
            <Label Text='":' />
        </HorizontalStackLayout>

        <ScrollView>

            <ListView x:Name="ListOfItems"
                      ItemsSource="{Binding Words}"
                      ItemSelected="ListOfItems_ItemSelected"
                      ItemTapped="ListOfItems_ItemTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding TranslatedWord}"
                                  Detail="{Binding BaseLanguageWord}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollView>

        <Button Text="Refresh" 
                Command="{Binding RefreshButtonCommand}"/>

    </VerticalStackLayout>
</ContentPage>